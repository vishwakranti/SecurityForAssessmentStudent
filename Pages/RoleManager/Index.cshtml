@page
@model SecurityForAssessmentStudent.Pages.RoleManager.IndexModel
@{

    ViewData["Title"] = "Roles and their Users";
}
    <a asp-page="/RoleManager/Create">Create a New Role </a>
    <hr /> 
    @if (Model.Roles.Any()) {
        <h5>List of All Roles</h5> 
        <div class="table-responsive"> 
        <table class="table table-striped table-bordered table-primary">
        @foreach (var role in Model.Roles)
        { 
            <tr> 
            <td>@role.Name</td> 
            </tr>
        }
        </table> 
        </div>
        <h5>List of Users and their Roles</h5> 
        <div class="table-responsive"> 
        <table class="table table-striped table-bordered table-dark">
        @foreach (var result in Model.UserRoles)
        { 
            <tr>
            <td>@result.UserName</td>
            <td>@result.RoleName</td>
            </tr>
        }
        </table> </div> 
}
